<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"

      >

        <Button
            android:id="@+id/famed_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:drawableTop="@drawable/ic_first_aid_kit"
            android:text="اسعافات اوليه"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:backgroundTint="@color/white" />

           <Button
               android:id="@+id/emnumed_btn"
               android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:background="@drawable/background_circle"
               android:drawableTop="@drawable/ic_emergency_call"
               android:text="ارقام الطوارئ"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:backgroundTint="@color/white" />
    </LinearLayout>
        <Button
            android:id="@+id/reciever_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle"
            android:drawableTop="@drawable/recive"
            android:text="استقبال البلاغات"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:backgroundTint="@color/white" />

</LinearLayout>


</ScrollView>